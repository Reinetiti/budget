{% extends 'base.html.twig' %}

{% block title %}Rubrique{% endblock %}

{% block body %}
    <h1 class="text-center">Affichage de la Rubrique</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>N°</th>
                <td>{{ rubrique.rubriqueid }}</td>
            </tr>
            <tr>
                <th>Libelé de la rubrique</th>
                <td>{{ rubrique.librubrique }}</td>
            </tr>
            <tr>
                <th>Code de la rubrique</th>
                <td>{{ rubrique.rubriquecode }}</td>
            </tr>
             <tr>
                <th>Paragraphe</th>
                <td>{{ rubrique.paragrapheid }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('rubrique_index') }}" class="btn">Retour à la liste</a>

    <a href="{{ path('rubrique_edit', {'rubriqueid': rubrique.rubriqueid}) }}" class="btn">Modifier</a>

    {{ include('rubrique/_delete_form.html.twig') }}
{% endblock %}
