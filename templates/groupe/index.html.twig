{% extends 'base.html.twig' %}

{% block title %}Groupe{% endblock %}

{% block body %}<br>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header" style="background: #FFE4C4;">
                <h4>Les Groupes déja enregistrer</h4>
            </div><br>
            <div>
                <a href="{{ path('groupe_new') }}" class="btn btn-primary btn-sm">Ajouter</a>
            </div><br>
            <div class="card-body table-responsive p-0" style="height: 300px;">
                <table class="table table-head-fixed text-nowrap align-items-center">
                    <thead class="floating-header entete" style="background: #C0C0C0;">
                        <tr>
                            <th class="text-center">N°</th>
                            <th class="text-center">Libelé du groupe</th>
                            <th class="text-center">Code du groupe</th>
                            <th class="text-center">Division</th>
                            <th class="text-center">Opérations</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for groupe in groupes %}
                        <tr>
                            {% if groupe.divisionid.divisionid | length < 2 %}
                                <td class="text-center">0{{ groupe.divisionid.divisionid }}{{ groupe.groupeid }}</td>
                            {% else %}
                                <td class="text-center">{{ groupe.divisionid.divisionid }}{{ groupe.groupeid }}</td>
                            {% endif %}
                            <td class="text-center">{{ groupe.libgroupe }}</td>
                            <td class="text-center">{{ groupe.groupecode }}</td>
                            <td class="text-center">{{ groupe.divisionid }}</td>
                            <td class="text-center">
                                <a href="{{ path('groupe_show', {'groupeid': groupe.groupeid}) }}"><i class="fa fa-eye"></i></a>
                                <a href="{{ path('groupe_edit', {'groupeid': groupe.groupeid}) }}"><i class="fa fa-edit"></i></a>
                                <a href="{{ path('groupe_delete', {'groupeid': groupe.groupeid}) }}"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
    {# <a href="{{ path('groupe_new') }}">Ajouter</a> #}
{% endblock %}
