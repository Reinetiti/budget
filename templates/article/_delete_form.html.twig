<form method="post" action="{{ path('article_delete', {'articleid': article.articleid}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.articleid) }}">
    <button class="btn btn-danger btn-sm"><i class="fa fa-trash"></i>Supprimer</button>
</form>
