{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Affichage d'un article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>N°</th>
                <td>{{ article.articleid }}</td>
            </tr>
            <tr>
                <th>Libelé de l'article</th>
                <td>{{ article.libarticle }}</td>
            </tr>
            <tr>
                <th>Code de l'article</th>
                <td>{{ article.articlecode }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}" class="btn">retour à la liste</a>

    <a href="{{ path('article_edit', {'articleid': article.articleid}) }}" class="btn">Modifier</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
