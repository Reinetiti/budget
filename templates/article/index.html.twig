{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <a href="{{ path('article_new') }}" class="btn">Ajouter</a>
    <table class="table">
        <thead>
            <tr>
                <th>N°</th>
                <th>Libelé de l'article</th>
                <th>Code de l'article</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.articleid }}</td>
                <td>{{ article.libarticle }}</td>
                <td>{{ article.articlecode }}</td>
                <td>
                    <a href="{{ path('article_show', {'articleid': article.articleid}) }}" class="btn">Afficher</a>
                    <a href="{{ path('article_edit', {'articleid': article.articleid}) }}" class="btn">Modifier</a>
                    <a href="{{ path('article_delete', {'articleid': article.articleid}) }}" class="btn">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('article_new') }}">Ajouter</a> #}
{% endblock %}
