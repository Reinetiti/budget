{% extends 'base.html.twig' %}

{% block title %}Exercice{% endblock %}

{% block body %}<br>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header" style="background: #FFE4C4;">
                <h4>Exercice</h4>
            </div><br>
            <div>
                <a href="{{ path('exercice_new') }}" class="btn btn-primary btn-sm">Ajouter</a>
            </div><br>
            <div class="card-body table-responsive p-0" style="height: 300px;">
                <table class="table table-head-fixed text-nowrap align-items-center">
                    <thead class="floating-header entete" style="background: #C0C0C0;">
                        <tr>
                            <th class="text-center">Année</th>
                            <th class="text-center">Début</th>
                            <th class="text-center">Fin</th>
                            <th class="text-center">Opérations</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for exercice in exercices %}
                        <tr>
                            <td class="text-center">{{ exercice.annee }}</td>
                            <td class="text-center">{{ exercice.debut ? exercice.debut|date('Y-m-d') : '' }}</td>
                            <td class="text-center">{{ exercice.fin ? exercice.fin|date('Y-m-d') : '' }}</td>
                            <td class="text-center">
                                <a href="{{ path('exercice_show', {'annee': exercice.annee}) }}"><i class="fa fa-eye"></i></a>
                                <a href="{{ path('exercice_edit', {'annee': exercice.annee}) }}"><i class="fa fa-edit"></i></a>
                                <a href="{{ path('exercice_delete', {'annee': exercice.annee}) }}"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
    {# <a href="{{ path('exercice_new') }}" class="btn">Créer un nouveau</a> #}
{% endblock %}
