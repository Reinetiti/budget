{% extends 'base.html.twig' %}

{% block title %}Exercice{% endblock %}

{% block body %}
    <h1 class="text-center">Exercice</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Annee</th>
                <td>{{ exercice.annee }}</td>
            </tr>
            <tr>
                <th>Début</th>
                <td>{{ exercice.debut ? exercice.debut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ exercice.fin ? exercice.fin|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('exercice_index') }}">retour à la liste</a>

    <a href="{{ path('exercice_edit', {'annee': exercice.annee}) }}">modifier</a>

    {{ include('exercice/_delete_form.html.twig') }}
{% endblock %}
