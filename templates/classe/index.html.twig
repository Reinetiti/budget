{% extends 'base.html.twig' %}

{% block title %}Classe index{% endblock %}

{% block body %}
    <h1>Classe index</h1>

    <a href="{{ path('classe_new') }}" class="btn">Ajouter</a>
    <table class="table">
        <thead>
            <tr>
                <th>N°</th>
                <th>Libelé de la classe</th>
                <th>Code de la classe</th>
                <th>Groupe</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classe in classes %}
            <tr>
                <td>{{ classe.classeid }}</td>
                <td>{{ classe.libclasse }}</td>
                <td>{{ classe.classecode }}</td>
                <td>{{ classe.groupeid }}</td>
                <td>
                    <a href="{{ path('classe_show', {'classeid': classe.classeid}) }}">Afficher</a>
                    <a href="{{ path('classe_edit', {'classeid': classe.classeid}) }}">Modifier</a>
                    <a href="{{ path('classe_delete', {'classeid': classe.classeid}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('classe_new') }}">Créer un nouveau</a> #}
{% endblock %}
