{% extends 'base.html.twig' %}

{% block title %}Engagement{% endblock %}

{% block body %}<br>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header" style="background: #FFE4C4;">
                <h4>Les Engagements déja enregistrer</h4>
            </div><br>
            <div>
                <a href="{{ path('engagement_new') }}" class="btn btn-primary btn-sm">Ajouter</a>
            </div><br>
            <div class="card-body table-responsive p-0" style="height: 300px;">
                <table class="table table-head-fixed text-nowrap align-items-center">
                    <thead class="floating-header entete" style="background: #C0C0C0;">
                        <tr>
                            <th class="text-center">N°</th>
                            <th class="text-center">Montant</th>
                            <th class="text-center">N° demande</th>
                            <th class="text-center">Opérations</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for engagement in engagements %}
                        <tr>
                            <td class="text-center">{{ engagement.numEngagement }}</td>
                            <td class="text-center">{{ engagement.montant }}</td>
                            <td class="text-center">{{ engagement.numDemande }}</td>
                            <td class="text-center">
                                <a href="{{ path('engagement_show', {'numEngagement': engagement.numEngagement}) }}"><i class="fa fa-eye"></i></a>
                                <a href="{{ path('engagement_edit', {'numEngagement': engagement.numEngagement}) }}"><i class="fa fa-edit"></i></a>
                                <a href="{{ path('engagement_delete', {'numEngagement': engagement.numEngagement}) }}"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
    {# <a href="{{ path('engagement_new') }}">Ajouter</a> #}
{% endblock %}
