{% extends 'base.html.twig' %}

{% block title %}Action{% endblock %}

{% block body %}
    <h1 class="text-center">Affichage d'une action</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>N°</th>
                <td>{{ action.actionid }}</td>
            </tr>
            <tr>
                <th>Code de l'action</th>
                <td>{{ action.actioncode }}</td>
            </tr>
            <tr>
                <th>Libelé de action</th>
                <td>{{ action.libaction }}</td>
            </tr>
            <tr>
                <th>Programme</th>
                <td>{{ action.programmeid }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('action_index') }}" class="btn btn-secondary btn-sm">retour à la liste</a>

    <a href="{{ path('action_edit', {'actionid': action.actionid}) }}" class="btn">Modifier</a>

    {{ include('action/_delete_form.html.twig') }}
{% endblock %}
